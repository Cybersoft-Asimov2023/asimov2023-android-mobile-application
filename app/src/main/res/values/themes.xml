<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Asimov2023" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/purpleAsimov</item>

    </style>
    <style name="CircularFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="background">@color/white</item>
        <item name="srcCompat">@drawable/add_image_button_icon</item>
        <item name="shapeAppearanceOverlay">@style/CircularShapeAppearanceOverlay</item>
    </style>
    <style name="CircularShapeAppearanceOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Asimov2023" parent="Base.Theme.Asimov2023" />
</resources>